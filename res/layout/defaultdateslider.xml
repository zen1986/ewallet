<?xml version="1.0" encoding="utf-8"?>
<com.comli.ilxm.dateSlider.SliderContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.comli.ilxm"
    android:id="@+id/dateSliderContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <com.comli.ilxm.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="com.comli.ilxm.labeler.MonthYearLabeler"
        app:labelerFormat="%tb %tY"
        app:childWidth="90dp"
        />
    <com.comli.ilxm.ScrollLayout
        style="@style/Scroller"
        app:labelerClass="com.comli.ilxm.labeler.DayDateLabeler"
        app:labelerFormat="%td %ta"
        app:childWidth="45dp"
        />
    <include layout="@layout/dialogbuttons"/>
</com.comli.ilxm.dateSlider.SliderContainer>
